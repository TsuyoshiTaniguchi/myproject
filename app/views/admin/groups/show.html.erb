<div class="container-fluid">
  <h1 class="mb-3">グループ詳細（管理者用）</h1>

  <!-- 戻るボタン -->
  <div class="mb-3">
    <%= link_to "ダッシュボードに戻る", admin_dashboard_path, class: "btn btn-secondary btn-sm mr-2" %>
    <%= link_to "グループ管理に戻る", admin_groups_path, class: "btn btn-secondary btn-sm" %>
  </div>

  <!-- タブナビゲーション：基本情報とメンバー管理の２タブ -->
  <ul class="nav nav-tabs" id="groupDetailTabs" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="basic-tab" data-toggle="tab" href="#basic" role="tab" 
         aria-controls="basic" aria-selected="true">
        基本情報
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="members-tab" data-toggle="tab" href="#members" role="tab" 
         aria-controls="members" aria-selected="false">
        メンバー管理
      </a>
    </li>
  </ul>

  <!-- タブコンテンツ -->
  <div class="tab-content mt-3" id="groupDetailTabsContent">
    <!-- 基本情報タブ -->
    <div class="tab-pane fade show active" id="basic" role="tabpanel" aria-labelledby="basic-tab">
      <div class="row">
        <!-- 左側：グループ画像 -->
        <div class="col-md-4 text-center">
          <% if @group.group_image.attached? %>
            <%= image_tag @group.group_image.variant(resize_to_fill: [200,200]),
                          class: "rounded mb-3 shadow", 
                          style: "width:200px; height:200px; object-fit:cover;",
                          alt: "#{@group.name}の画像" %>
          <% else %>
            <%= image_tag "no_image.jpg", class: "rounded mb-3 shadow", width: 200, height: 200,
                          alt: "グループ画像なし" %>
          <% end %>
        </div>

        <!-- 右側：グループ基本情報 -->
        <div class="col-md-8">
          <p><strong>説明：</strong> <%= @group.description.presence || "説明はありません" %></p>
          <p><strong>作成日：</strong> <%= @group.created_at.strftime("%Y-%m-%d") %></p>
          <p><strong>オーナー：</strong> <%= @group.owner&.name || "未設定" %></p>
          <p><strong>メンバー数：</strong> <%= @group.users.count %> 人</p>
          <p>
            <strong>カテゴリ：</strong>
            <%= @group.category == "official_label" ? "公式グループ" : "ユーザー作成グループ" %>
          </p>
          <p>
            <strong>公開範囲：</strong>
            <% case @group.privacy
              when "public_visibility" then privacy_text = "公開"
              when "restricted_visibility" then privacy_text = "メンバーのみ"
              when "private_visibility" then privacy_text = "非公開"
              else privacy_text = "-" end %>
            <%= privacy_text %>
          </p>
          <p>
            <strong>参加ルール：</strong>
            <% if @group.join_policy == "admin_only" && @group.owner && !@group.owner.admin? %>
              管理者のみ承認（※ユーザー作成グループのため、この設定は実際には適用されません）
            <% else %>
              <% case @group.join_policy
                when "open" then join_text = "誰でも参加可能"
                when "invite_only" then join_text = "承認制"
                when "admin_only" then join_text = "管理者のみ承認"
                else join_text = "-" end %>
              <%= join_text %>
            <% end %>
          </p>

          <% if @group.reported? %>
            <div class="alert alert-danger mt-3" role="alert">
              ⚠️ このグループは通報済みです。
            </div>
            <!-- 通報解除ボタンを追加 -->
            <div class="mt-3">
              <%= link_to "⚠️ 通報を解除する", unreport_admin_group_path(@group),
                          method: :patch,
                          data: { confirm: "本当に通報を解除しますか？" },
                          class: "btn btn-outline-secondary btn-sm" %>
            </div>
          <% end %>

        <div class="mt-3">
          <%= link_to "編集", edit_admin_group_path(@group), class: "btn btn-warning btn-sm mr-2" %>
          <%= link_to "🗑️削除", admin_group_path(@group),
                      method: :delete,
                      data: { confirm: "⚠️ 本当にこのグループを削除しますか？ この操作は取り消せません！" },
                      class: "btn btn-danger btn-sm" %>
        </div>
      </div>
    </div>
  </div>

    <!-- メンバー管理タブ -->
    <div class="tab-pane fade" id="members" role="tabpanel" aria-labelledby="members-tab">
      <h5>全メンバー一覧</h5>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>名前</th>
            <th>役割</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @group.memberships.each do |membership| %>
            <tr>
              <td><%= membership.user.name %></td>
              <td><%= membership.role %></td>
              <td>
                <% unless membership.role == "admin" %>
                  <%= button_to "🗑️削除", reject_admin_group_membership_path(@group, membership),
                                  method: :delete, class: "btn btn-danger btn-sm",
                                  data: { confirm: "本当に削除しますか？" } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <!-- 新規メンバー追加 -->
      <h5 class="mt-3">新規メンバーを追加</h5>
      <%= form_with url: admin_group_memberships_path(@group), method: :post, local: true do |f| %>
        <div class="form-group">
          <%= f.label :user_id, "ユーザー選択" %>
          <%= f.collection_select :user_id,
                User.where.not(id: @group.users.pluck(:id))
                    .where.not(role: "admin")
                    .where.not(name: "ゲスト"),
                :id, :name, { prompt: "ユーザーを選択" }, { class: "form-control" } %>
        </div>
        <%= f.submit "追加", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <!-- 承認待ちとグループ活動履歴のパネル -->
  <div class="row mt-4">
    <!-- 承認待ちメンバー -->
    <div class="col-lg-6 mb-3">
      <div class="card">
        <div class="card-header">
          承認待ちメンバー
        </div>
        <div class="card-body">
          <% pending_memberships = @group.memberships.where(role: "pending").where.not(user_id: @group.owner_id) %>
          <% if pending_memberships.any? %>
            <% pending_memberships.each do |membership| %>
              <div class="border p-2 mb-2">
                <strong><%= membership.user.name %></strong> の参加リクエスト中
                <div class="mt-2">
                  <%= form_with url: approve_admin_group_membership_path(membership),
                                method: :patch, local: true do |f| %>
                    <div class="form-group">
                      <%= f.label :approval_reason, "承認理由（任意）" %>
                      <%= f.text_area :approval_reason, class: "form-control", rows: 3 %>
                    </div>
                    <%= f.submit "承認する", class: "btn btn-success btn-sm" %>
                  <% end %>
                  <%= link_to "❌ 拒否",
                                reject_admin_group_membership_path(@group, membership),
                                method: :delete,
                                data: { confirm: "本当に拒否しますか？" },
                                class: "btn btn-danger btn-sm mt-2" %>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted text-center">⏳ 現在、承認待ちのメンバーはいません。</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- グループ活動履歴 -->
    <div class="col-lg-6 mb-3">
      <div class="card">
        <div class="card-header">
          グループ活動履歴
        </div>
        <div class="card-body">
          <% if @group.posts.any? %>
            <div style="max-height:300px; overflow-y:auto;">
              <ul class="list-unstyled">
                <% @group.posts.each do |post| %>
                  <li>
                    <%= link_to post.title, admin_post_path(post) %>
                    （<%= post.created_at.strftime("%Y-%m-%d") %>）
                  </li>
                <% end %>
              </ul>
            </div>
          <% else %>
            <p class="text-muted">活動履歴がありません。</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>