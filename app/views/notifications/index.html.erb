<!-- app/views/notifications/index.html.erb -->
<div class="container my-4">
  <h2 class="mb-3">通知一覧</h2>

  <% if @notifications.any? %>
    <!-- 通知リストを描画 -->
    <%= render "public/shared/notification_list", notifications: @notifications %>

    <div class="mt-3 text-end">
      <%= button_to "すべて既読にする",
                    mark_all_read_notifications_path,
                    method: :patch,
                    class: "btn btn-sm btn-secondary" %>
    </div>
  <% else %>
    <!-- 通知が1件もない場合 -->
    <p class="text-muted">通知はありません</p>
  <% end %>
</div>

<%= link_to "マイページ", users_mypage_path, class: "btn btn-outline-secondary btn-lg mr-2 mb-2" %>
