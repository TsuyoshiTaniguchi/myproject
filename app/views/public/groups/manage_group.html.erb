<h1><%= @group.name %> の参加リクエスト</h1>

<% if @pending_members.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ユーザー名</th>
        <th>申請日</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
    <% @pending_members.each do |membership| %>
      <tr>
        <td><%= membership.user.present? ? membership.user.name : "不明なユーザー" %></td>
        <td><%= membership.created_at.present? ? membership.created_at.strftime("%Y/%m/%d %H:%M") : "日時不明" %></td>
        <td>
          <% if membership.user.present? %>
            <%= button_to "✅ 承認", approve_membership_group_membership_path(@group, membership), method: :patch, class: "btn btn-success btn-sm" %>
            <%= button_to "❌ 拒否", reject_membership_group_membership_path(@group, membership), method: :delete, class: "btn btn-danger btn-sm" %>
          <% else %>
            <p class="text-muted">ユーザー情報が見つかりません。</p>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p class="text-muted">現在、承認待ちのメンバーはいません。</p>
<% end %>

<div class="text-center mt-4">
  <%= link_to "🔙 グループの詳細へ戻る", group_path(@group), class: "btn btn-primary mx-2" %>
  <%= link_to "📌 マイグループ一覧へ", user_groups_path(current_user), class: "btn btn-outline-info mx-2" %>
  <% if current_user == @group.owner %>
    <%= link_to "⚡ オーナー管理画面へ戻る", owner_dashboard_group_membership_path(@group), class: "btn btn-warning mx-2" %>
  <% end %>
</div>
