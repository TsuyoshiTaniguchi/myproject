<div class="container mt-4">
  <h1 class="mb-4"><%= @user.name %>さんのプロフィール</h1>

  <!-- タブ切り替え（マイページと統一） -->
  <ul class="nav nav-pills mb-3" id="userProfileTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active"
         id="profile-tab"
         data-toggle="tab"
         href="#profile"
         role="tab"
         aria-controls="profile"
         aria-selected="true">
        プロフィール
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link"
         id="posts-tab"
         data-toggle="tab"
         href="#posts"
         role="tab"
         aria-controls="posts"
         aria-selected="false">
        投稿一覧
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link"
         id="selfpr-tab"
         data-toggle="tab"
         href="#selfpr"
         role="tab"
         aria-controls="selfpr"
         aria-selected="false">
        自己PR詳細
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link"
         id="daily_reports-tab"
         data-toggle="tab"
         href="#daily_reports"
         role="tab"
         aria-controls="daily_reports"
         aria-selected="false">
        ライフログ＜日報管理＞
      </a>
    </li>
  </ul>

  <!-- タブパネル -->
  <div class="tab-content" id="userProfileTabContent">
    <!-- プロフィール -->
    <div class="tab-pane fade show active"
         id="profile"
         role="tabpanel"
         aria-labelledby="profile-tab">
      <%= render partial: "public/users/profile", locals: { user: @user, show_actions: false } %>
    </div>

    <!-- 投稿一覧 -->
    <div class="tab-pane fade"
         id="posts"
         role="tabpanel"
         aria-labelledby="posts-tab">
      <%= render partial: "public/posts/post_list",
                  locals: { user: @user, show_create_button: false, show_edit_button: false } %>
    </div>

    <!-- 自己PR詳細（成長ストーリー） -->
    <div class="tab-pane fade"
         id="selfpr"
         role="tabpanel"
         aria-labelledby="selfpr-tab">
      <h3>成長ストーリー</h3>
      <% if @user.growth_story.present? %>
        <div class="mb-3">
          <p><%= simple_format(@user.growth_story) %></p>
        </div>
      <% else %>
        <p class="text-muted">
          成長ストーリーがまだ登録されていません。
          <% if current_user == @user %>
            <%= link_to "自己PR詳細を編集する", edit_user_path(@user) %>
          <% end %>
        </p>
      <% end %>
    </div>

        <!-- ライフログ（日報管理） -->
    <div class="tab-pane fade"
         id="daily_reports"
         role="tabpanel"
         aria-labelledby="daily_reports-tab">
      <%= render "public/daily_reports/daily_reports_section", user: @user %>
    </div>
  </div>

  <!-- ユーザー一覧ボタン -->
  <div class="text-center mt-4">
    <%= link_to "ユーザー一覧", users_path, class: "btn btn-lg btn-outline-secondary px-4" %>
  </div>
</div>