<!-- app/views/devise/registrations/edit.html.erb -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <!-- ヘッダー -->
        <div class="card-header text-center">
          <h2 class="card-title mb-0">アカウント情報の編集</h2>
        </div>

        <!-- 本体フォーム -->
        <div class="card-body">
          <%= form_for(resource,
                       as: resource_name,
                       url: registration_path(resource_name),
                       html: { method: :put }) do |f| %>

            <!-- エラーメッセージ -->
            <%= render "public/shared/error_messages", resource: resource %>

            <!-- メールアドレス -->
            <div class="form-group">
              <%= f.label :email, "メールアドレス" %>
              <%= f.email_field :email,
                  class: "form-control",
                  autofocus: true,
                  autocomplete: "email" %>
            </div>

            <!-- 確認待ち再送 -->
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="alert alert-warning">
                確認メール送信待ち: <%= resource.unconfirmed_email %>
              </div>
            <% end %>

            <hr>

            <!-- 新しいパスワード -->
            <div class="form-group">
              <%= f.label :password, "新しいパスワード" %>
              <small class="text-muted">
                （変更しない場合は空欄のままにしてください）
              </small>
              <%= f.password_field :password,
                  class: "form-control",
                  autocomplete: "new-password" %>
              <% if @minimum_password_length %>
                <small class="text-muted d-block">
                  ※<%= @minimum_password_length %>文字以上で設定してください
                </small>
              <% end %>
            </div>

            <!-- パスワード確認 -->
            <div class="form-group">
              <%= f.label :password_confirmation, "パスワード（確認用）" %>
              <%= f.password_field :password_confirmation,
                  class: "form-control",
                  autocomplete: "new-password" %>
            </div>

            <!-- 現在のパスワード -->
            <div class="form-group">
              <%= f.label :current_password, "現在のパスワード" %>
              <small class="text-muted">
                （安全のため、変更時に現在のパスワードが必要です）
              </small>
              <%= f.password_field :current_password,
                  class: "form-control",
                  autocomplete: "current-password" %>
            </div>

            <div class="form-group d-flex">
            <%= link_to "マイページへ戻る",
                        users_mypage_path,
                        class: "btn btn-outline-secondary flex-fill mr-2" %>
            <%= f.submit "更新する",
                         class: "btn btn-primary flex-fill" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>