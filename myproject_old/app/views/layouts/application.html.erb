<!DOCTYPE html>
<html>
  <head>
    <title>WAI_to_WAI</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- API キー用の meta -->
    <meta name="google-maps-api-key"
          content="<%= ENV['GOOGLE_MAPS_API_KEY'] %>">

    <!-- Bootstrap 4.6.2 CSS -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- FullCalendar CSS（CDN） -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@fullcalendar/core@6.1.4/index.global.min.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@fullcalendar/daygrid@6.1.4/index.global.min.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@fullcalendar/bootstrap@6.1.4/index.global.min.css" />

    <!-- アプリ固有 SCSS -->
    <%= stylesheet_link_tag 'application',
          media: 'all',
          'data-turbolinks-track': 'reload' %>

    <!-- Webpacker バンドル（application.js） -->
    <%= javascript_pack_tag 'application',
          'data-turbolinks-track': 'reload' %>

    <!-- Font Awesome Kit -->
    <script src="https://kit.fontawesome.com/e1acaa1ac8.js"
            crossorigin="anonymous"></script>

    <!-- Google Maps API -->
    <script async defer data-turbolinks-eval="false"
      src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>&libraries=marker&loading=async&callback=gmapsBoot">
    </script>
  </head>


  <body class="d-flex flex-column vh-100" style="background-color:#F8F9FA;">

    <!-- ヘッダー -->
    <%= render 'layouts/user_header' %>

    <!-- メイン -->
    <main class="mb-auto">
      <% if flash[:notice].present? %>
        <p class="text-success px-3"><%= flash[:notice] %></p>
      <% end %>
      <% if flash[:alert].present? %>
        <p class="text-danger px-3"><%= flash[:alert] %></p>
      <% end %>

      <%= yield %>
    </main>

    <!-- フッター -->
    <%= render 'layouts/footer' %>

  </body>
</html>
