<!-- ÊäïÁ®ø„Çø„Ç§„É†„É©„Ç§„É≥ -->
<% if @posts.any? %>
    <div class="timeline">
      <% @posts.each do |post| %>
        <div class="timeline-item mb-4 p-3 border rounded">
          <div class="timeline-content">

            <!-- „É¶„Éº„Ç∂„Éº„Ç¢„Ç§„Ç≥„É≥„ÉªÂêçÂâç„Éª„Ç´„ÉÜ„Ç¥„É™Ôºè„Çø„Ç∞ „ÇíÂêå„ÅòË°å„Å´ -->
            <div class="d-flex align-items-center mb-2">
              <% if post.user.profile_image.attached? %>
                <%= image_tag post.user.profile_image.variant(resize_to_fill: [50, 50]),
                              class: "rounded-circle mr-2" %>
              <% end %>
              <div class="mr-auto">
                <h5 class="mb-0">
                  <%= link_to post.user.name, user_path(post.user),
                              class: "text-decoration-none" %>
                </h5>
                <small class="text-muted"><%= time_ago_in_words(post.created_at) %></small>
              </div>

              <%# „Ç´„ÉÜ„Ç¥„É™ÔºÜ„Çø„Ç∞„Çí‰∏ÄË°å„Å´„Åæ„Å®„ÇÅ„Å¶Ë°®Á§∫ %>
              <div class="d-flex align-items-center mb-2">
                <% if post.category.present? %>
                  <span class="mr-2">
                    <strong>„Ç´„ÉÜ„Ç¥„É™:</strong>
                    <span class="badge badge-primary ml-1"><%= post.category %></span>
                  </span>
                <% end %>
              
                <% if post.tag_list.present? %>
                  <%# Â∑¶ÂÅ¥„Å´Â¢ÉÁïåÁ∑ö„ÇíÂÖ•„Çå„Çã %>
                  <div class="border-left pl-3 ml-3">
                    <strong>„Çø„Ç∞:</strong>
                    <% post.tag_list.each do |tag| %>
                      <%= link_to tag,
                                  posts_path(tag: tag),
                                  class: "badge badge-info ml-1 mb-1" %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>

            <!-- „Çø„Ç§„Éà„É´ -->
            <h2 class="h5 mb-3">
              <%= link_to post.title, post_path(post),
                          class: "text-decoration-none font-weight-bold" %>
            </h2>

            <!-- ÁîªÂÉèÔºà„ÅÇ„Çå„Å∞Ôºâ -->
            <% if post.images.attached? %>
              <div class="post-images mb-3 d-flex flex-wrap">
                <% post.images.each do |img| %>
                  <%= image_tag img.variant(resize: "400x400"),
                                class: "img-fluid mb-2 mr-2",
                                style: "max-width:48%;" %>
                <% end %>
              </div>
            <% end %>

            <!-- Êú¨Êñá -->
            <p class="mb-3"><%= sanitize(post.content) %></p>

            <!-- „Ç≥„Éº„Éâ„Çπ„Éã„Éö„ÉÉ„Éà -->
            <% if post.code_snippet.present? %>
              <pre class="code-block mb-3"><%= sanitize(post.code_snippet) %></pre>
            <% end %>

            <!-- „ÅÑ„ÅÑ„Å≠ & „Ç≥„É°„É≥„Éà -->
            <% unless guest_blocked? %>
              <div class="d-flex align-items-center">
                <div id="post-likes-<%= post.id %>" class="mr-3">
                  <%= render 'public/likes/like_button', post: post %>
                </div>
                <%= link_to "üí¨ „Ç≥„É°„É≥„Éà (#{post.comments.count})",
                            post_path(post),
                            class: "btn btn-outline-secondary btn-sm" %>
              </div>
            <% end %>

            <!-- Á∑®ÈõÜÔºèÂâäÈô§ÔºàÊú¨‰∫∫ & Èùû„Ç≤„Çπ„ÉàÔºâ -->
            <% if post.user == current_user && !guest_blocked? %>
              <div class="d-flex mt-2">
                <%= link_to "Á∑®ÈõÜ", edit_post_path(post),
                            class: "btn btn-warning btn-sm mr-2" %>
                <%= link_to "ÂâäÈô§", post_path(post),
                            method: :delete,
                            data: { confirm: "Êú¨ÂΩì„Å´ÂâäÈô§„Åó„Åæ„Åô„ÅãÔºü" },
                            class: "btn btn-danger btn-sm" %>
              </div>
            <% end %>

          </div>
        </div>
      <% end %>
    </div>

    <!-- „Éö„Éº„Ç∏„Éç„Éº„Ç∑„Éß„É≥ -->
    <%= paginate @posts %>
  <% else %>
    <div class="alert alert-info">
      <p>„Åæ„Å†ÊäïÁ®ø„Åå„ÅÇ„Çä„Åæ„Åõ„Çì„ÄÇ</p>
      <% unless guest_blocked? %>
        <p>ÊúÄÂàù„ÅÆÊäïÁ®ø„Çí„Åó„Å¶„Åø„Åæ„Åõ„Çì„ÅãÔºü</p>
        <%= link_to "Êñ∞Ë¶èÊäïÁ®ø„Åô„Çã", new_post_path, class: "btn btn-primary" %>
